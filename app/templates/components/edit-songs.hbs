<form class="form-horizontal" {{action "add" on="submit"}}>
	<div class="form-group">
		<label class="col-md-4 col-lg-3">Song</label>
		<div class="col-md-8 col-lg-9">
			{{input text="text" value=songToAdd required="true" placeholder="Shake It Off" class="form-control" key-press="change"}}
		</div>
	</div>
	<div class="form-group">
		<label class="col-md-4 col-lg-3">Artist</label>
		<div class="col-md-8 col-lg-9">
			{{input type="text" value=artist placeholder=artistPlaceholder class="form-control" key-press="change"}}
		</div>
	</div>
	<button class="pull-right btn btn-primary" type="submit">Submit</button>
    <div class="clearfix"></div>
</form>
<hr>
<ul class="list-group">
	{{#each album.songs as |song|}}
		{{song-list-item song=song removeSong="removeSong"}}
		{{else}}
			{{status-list-item label="Nothing to see here. Add some songs."}}
	{{/each}}
</ul>
