<div>{{add-album-form addAlbum="addAlbum"}}</div>

<div class="row">
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading">Albums</div>
			<ul class="list-group">
				{{#each model as |album|}}
					{{album-list-item album=album removeAlbum="removeAlbum" click="albumDetail" selectedAlbum=selectedAlbum}}
					{{else}}
						{{status-list-item label="Nothing to see here. Add some albums."}}
				{{/each}}
			</ul>
		</div>
	</div>
	<div class="col-md-8">
		{{outlet}}
	</div>
</div>
